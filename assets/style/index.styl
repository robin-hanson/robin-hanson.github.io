@require '_lib'

body > header
	margin-bottom 0.5em

#cover
	text-align center
	img
		height 60vmin
		min-height 440px
		shad = 0.25rem
		box-shadow shad shad (shad * 2) #0

#description
	margin 0.75em 0

	text-align center

	#title, #publisher
		font-size 120%

	#title
		font-weight bold

	#publisher
		font-style italic

	#cover-explain
		color #6
		font-style italic

		a
			color #448


main
	#summary
		margin-top 0
		margin-bottom 1em

		#lead
			font-size 120%
			font-weight bold

		#order
			text-align center

			#main
				font-size 150%

		#sample
			margin-top 0.5em
			text-align center
			font-size 150%
			a
				color #c08

	.video
		background none
		margin 0 auto

		max-width 560px
		height 315px

		iframe
			width 100%
			height 100%

	.video-intro
		text-align center
		margin-bottom 0

	#author
		#name
			font-weight bold
			font-size 120%

	#toc
		.sections
			counter-reset chapter

			color #6 // This only affects list-style-type
			list-style-type upper-roman
			padding-left 1em

			> li
				margin 1em 0
				> header
					color #000
					font-size 115%

			.chapters
				padding 0
				list-style-type none

				> li:before
					display inline-block
					color #a
					width 1.5em
					counter-increment chapter
					content counter(chapter)

				header
					display inline-block
					color #004
					width 6em

		details
			display inline-block
			margin-left 2em

			> summary
				cursor pointer
			> div
				color #0
				margin 0.5em 2em

			&.nochapter
				margin-left 0

		ol.chapter-sections // letters, and on a single line
			color #0
			display inline-block

			padding 0

			li
				display inline-block
				&:after
					content "Â·"
					margin 0 0.15em
					color #8
				&:last-child:after
					content none

			&.nochapter
				padding 0
