@require '_lib'

@import '//maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css'
@import '//fonts.googleapis.com/css?family=' + font-names

html, body
	min-height 100%
	margin 0
	background-repeat no-repeat
	background-attachment fixed
	font-text()
a
	color #228
	font-weight bold
	text-decoration none

aside
	color #8
	&::before
		content '('
	&::after
		content ')'

body
	stripe-size = 0.5rem
	blue-a = #abd
	blue-b = #8af
	a = rgba(255, 255, 128, 0.0625)
	b = rgba(0, 0, 0, 0)
	background repeating-linear-gradient(0deg, a, a stripe-size, b stripe-size, b (stripe-size * 2)),
		linear-gradient(blue-a, blue-b)

body > header
	text-align center
	margin-bottom 1em

	> nav
		display inline-block
		margin-left auto
		margin-right auto
		background #f
		border-radius-bottom 1em

		a
			font-head()
			margin 0 0.5em
			color #004

			> img
				width 1.35em
				height 1.35em
				margin-bottom -0.15em

		.fa
			font-size 135%
			margin 0

main
	margin 0 1em

	header
		font-head()
		color #008

	section
		margin-top 2em
		max-width 800px
		margin-left auto
		margin-right auto

		> header
			font-size 125%

		background linear-gradient(#fffff8, #e8f8ff) fixed
		padding 0.5em 1em
		border-radius-bottom 2em

		&:first-child
			margin-top 0
